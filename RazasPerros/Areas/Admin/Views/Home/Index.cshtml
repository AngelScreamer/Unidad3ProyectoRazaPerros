@model RazasPerros.Models.IndexViewModel
@{
    Layout = "_Layout";
}


<h3>
    <a href="~/Admin/Home/Agregar" >
        Agregar nueva raza
    </a>
</h3>

<section class="list">
    <ul>
        @foreach (var item in Model.Razas)
        {
            <li>
                <img src="~/imgs_perros/@(item.Id)_0.jpg">
                    @item.Nombre
                
                 <div class="botonesIndex">
                    <a href="~/Admin/Home/Editar/@item.Id">
                        <input type="button" value="Editar" />
                    </a>
                    <a href="~/Admin/Home/Eliminar/@item.Id">
                        <input type="button" value="Eliminar" />
                    </a>
                </div>
            </li>
        }
    </ul>
</section>